!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %title Physical Document Tracking System
    / Bootstrap core CSS
    %link{:href => "vendor/bootstrap/css/bootstrap.min.css", :rel => "stylesheet"}/
    / Custom fonts for this template
    %link{:href => "vendor/font-awesome/css/font-awesome.min.css", :rel => "stylesheet", :type => "text/css"}/
    / Custom styles for this template
    %link{:href => "css/sb-admin.css", :rel => "stylesheet"}/
  %body#page-top.fixed-nav.sticky-footer.bg-dark
    / Navigation
    %nav#mainNav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
      %a.navbar-brand{:href => "/dashboard"}
        %strong Physical Document Tracking System
      %button.navbar-toggler.navbar-toggler-right{"aria-controls" => "navbarResponsive", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarResponsive", "data-toggle" => "collapse", :type => "button"}
        %span.navbar-toggler-icon
      #navbarResponsive.collapse.navbar-collapse
        %ul#exampleAccordion.navbar-nav.navbar-sidenav
          %li.nav-item{"data-placement" => "right", "data-toggle" => "tooltip", :title => "Dashboard"}
            %a.nav-link{:href => "/dashboard"}
              %i.fa.fa-fw.fa-dashboard
              %span.nav-link-text Dashboard
          %li.nav-item{"data-placement" => "right", "data-toggle" => "tooltip", :title => "ViewDocuments"}
            %a.nav-link{:href => "/view_documents"}
              %i.fa.fa-fw.fa-file
              %span.nav-link-text View Documents
          %li.nav-item{"data-placement" => "right", "data-toggle" => "tooltip", :title => "Folders"}
            %a.nav-link{:href => "/folders"}
              %i.fa.fa-fw.fa-folder
              %span.nav-link-text Folders
        %ul.navbar-nav.sidenav-toggler
          %li.nav-item
            %a#sidenavToggler.nav-link.text-center
              %i.fa.fa-fw.fa-angle-left
        %ul.navbar-nav.ml-auto
          %li.nav-item
            %a.nav-link{"data-target" => "#exampleModal", "data-toggle" => "modal"}
              %i.fa.fa-fw.fa-sign-out>
              Logout
    .content-wrapper
      .container-fluid
        / Breadcrumbs
        %ol.breadcrumb
          %li.breadcrumb-item
            %a{:href => "/dashboard"} Dashboard
          %li.breadcrumb-item
            %a{:href => "/view_documents"} View Documents
          %li.breadcrumb-item.active Add Document
        / Example DataTables Card
        .card.mb-3
          .card-header
            %i.fa.fa-table
            Add Document
          .card-body
            .form-validation
              %form.form-valide{:action => "login.html", :method => "post"}
                .form-group
                  %b DOCUMENT INFORMATION
                  %br/
                  .form-group
                    .form-row
                      .col-md-6
                        %label{:for => "val-docname"}
                          Document Name
                          %span.text-danger *
                        %input#val-docname.form-control{:name => "val-docname", :placeholder => "Name of the Document", :type => "text"}/
                      .col-md-6
                        %label{:for => "val-doctype"}
                          Document Type
                          %span.text-danger *
                        %input#val-doctype.form-control{:name => "val-doctype", :placeholder => "", :type => "text"}/
                  .form-group
                    %label{:for => "val-description"}
                      Description
                      %span.text-danger *
                    %div
                      %input#val-description.form-control{:name => "val-description", :placeholder => "Add Description here", :type => "text"}/
                  .form-group
                    %label{:for => "val-location"}
                      Location
                      %span.text-danger *
                    %div
                      %input#val-location.form-control{:name => "val-location", :placeholder => "", :type => "text"}/
                .form-group
                  %b AUTHOR INFORMATION
                  %br/
                  .form-group
                    .form-row
                      .col-md-6
                        %label{:for => "val-authorname"}
                          Name
                          %span.text-danger *
                        %input#val-authorname.form-control{:name => "val-authorname", :placeholder => "Name of the Author", :type => "text"}/
                      .col-md-6
                        %label{:for => "val-contactnum"}
                          Contact Number
                          %span.text-danger *
                        %input#val-contactnum.form-control{:name => "val-contactnum", :placeholder => "+69278781163", :type => "text"}/
                  .form-group
                    .form-row
                      .col-md-6
                        %label{:for => "val-department"}
                          Department
                          %span.text-danger *
                        %input#val-department.form-control{:name => "val-department", :placeholder => "Name of the Department", :type => "password"}/
                      .col-md-6
                        %label{:for => "val-agency"}
                          Agency
                          %span.text-danger *
                        %input#val-agency.form-control{:name => "val-agency", :placeholder => "Name of the Agency", :type => "text"}/
                  .form-group
                    %label{:for => "val-address"}
                      Address
                      %span.text-danger *
                    %div
                      %input#val-address.form-control{:name => "val-address", :placeholder => "", :type => "text"}/
                %div
                  %button.btn.btn-primary{:type => "button"} Add
                  %a.btn.btn-secondary{:href => "/view_documents"} Back
        / /.container-fluid
        / /.content-wrapper
        %footer.sticky-footer
          .container
            .text-center
              %small Copyright Â© Your Website 2018
        / Scroll to Top Button
        %a.scroll-to-top.rounded{:href => "#page-top"}
          %i.fa.fa-angle-up
        / Logout Modal
        #exampleModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
          .modal-dialog{:role => "document"}
            .modal-content
              .modal-header
                %h5#exampleModalLabel.modal-title Ready to Leave?
                %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
                  %span{"aria-hidden" => "true"} Ã—
              .modal-body Select "Logout" below if you are ready to end your current session.
              .modal-footer
                %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Cancel
                %a.btn.btn-primary{:href => "/log_user"} Logout
        / Bootstrap core JavaScript
        %script{:src => "vendor/jquery/jquery.min.js"}
        %script{:src => "vendor/bootstrap/js/bootstrap.bundle.min.js"}
        / Core plugin JavaScript
        %script{:src => "vendor/jquery-easing/jquery.easing.min.js"}
        / Page level plugin JavaScript
        %script{:src => "vendor/chart.js/Chart.min.js"}
        %script{:src => "vendor/datatables/jquery.dataTables.js"}
        %script{:src => "vendor/datatables/dataTables.bootstrap4.js"}
        / Custom scripts for all pages
        %script{:src => "js/sb-admin.min.js"}
        / Custom scripts for this page
        %script{:src => "js/sb-admin-datatables.min.js"}
        %script{:src => "js/sb-admin-charts.min.js"}
