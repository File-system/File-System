!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %title Physical Document Tracking System
    / Bootstrap core CSS
    %link{:href => "vendor/bootstrap/css/bootstrap.min.css", :rel => "stylesheet"}/
    / Custom fonts for this template
    %link{:href => "vendor/font-awesome/css/font-awesome.min.css", :rel => "stylesheet", :type => "text/css"}/
    / Page level plugin CSS
    %link{:href => "vendor/datatables/dataTables.bootstrap4.css", :rel => "stylesheet"}/
    / Custom styles for this template
    %link{:href => "css/sb-admin.css", :rel => "stylesheet"}/
  %body#page-top.fixed-nav.sticky-footer.bg-dark
    / Navigation
    %nav#mainNav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
      %a.navbar-brand{:href => "/dashboard"}
        %strong Physical Document Tracking System
      %button.navbar-toggler.navbar-toggler-right{"aria-controls" => "navbarResponsive", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarResponsive", "data-toggle" => "collapse", :type => "button"}
        %span.navbar-toggler-icon
      #navbarResponsive.collapse.navbar-collapse
        %ul#exampleAccordion.navbar-nav.navbar-sidenav
          %li.nav-item{"data-placement" => "right", "data-toggle" => "tooltip", :title => "Dashboard"}
            %a.nav-link{:href => "/dashboard"}
              %i.fa.fa-fw.fa-dashboard
              %span.nav-link-text Dashboard
          %li.nav-item{"data-placement" => "right", "data-toggle" => "tooltip", :title => "View Documents"}
            %a.nav-link{:href => "/view_documents"}
              %i.fa.fa-fw.fa-file-text
              %span.nav-link-text View Documents
          %li.nav-item{"data-placement" => "right", "data-toggle" => "tooltip", :title => "Folders"}
            %a.nav-link{:href => "/folders"}
              %i.fa.fa-fw.fa-folder
              %span.nav-link-text Folders
          %li.nav-item{"data-placement" => "right", "data-toggle" => "tooltip", :title => "Settings"}
            %a.nav-link{:href => "/settings"}
              %i.fa.fa-fw.fa-gear
              %span.nav-link-text Settings
          %li.nav-item{"data-placement" => "right", "data-toggle" => "tooltip", :title => "Account"}
            %a.nav-link{:href => "/profile_information"}
              %i.fa.fa-fw.fa-user
              %span.nav-link-text Account
        %ul.navbar-nav.sidenav-toggler
          %li.nav-item
            %a#sidenavToggler.nav-link.text-center
              %i.fa.fa-fw.fa-angle-left
        %ul.navbar-nav.ml-auto
          %li.nav-item
            %a.nav-link{"data-target" => "#exampleModal", "data-toggle" => "modal"}
              %i.fa.fa-fw.fa-sign-out>
              Logout
    .content-wrapper
      .container-fluid
        / Breadcrumbs
        %ol.breadcrumb
          %li.breadcrumb-item
            %a{:href => "/dashboard"} Dashboard
          %li.breadcrumb-item.active Settings
        / Example DataTables Card
        .card.mb-3
          .card-header
            %i.fa.fa-gear
            Settings
          .card-body
            - if flash[:danger]
              .alert.alert-danger.alert-dismissible.fade.show{"data-auto-dismiss" => "2000", :role => "alert"}
                %a.close{"aria-label" => "close", "data-dismiss" => "alert", :href => "#"} ×
                %b.notice= flash[:danger]
            - if flash[:notice]
              .alert.alert-success.alert-dismissible.fade.show{"data-auto-dismiss" => "2000", :role => "alert"}
                %a.close{"aria-label" => "close", "data-dismiss" => "alert", :href => "#"} ×
                %b.notice= flash[:notice]
            .form-row
              .col-lg-6
                .card
                  .card-header
                    %strong.card-title Document Types
                  .card-body
                    %table.table
                      %thead
                        %tr{:align => "center"}
                          %th Name
                          %th Options
                      %tbody{:align => "center"}
                        - @doc_type.each do |type|
                          %tr
                            %td= type.name
                            %td
                              %a.btn-sm.btn-primary{:href => edit_doctype_path(id: type.id)} Edit
                              %btn.btn-sm.btn-danger{"data-target" => "#deleteModal", "data-toggle" => "modal"} Delete
                              #deleteModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "deleteModalLabel", :role => "dialog", :tabindex => "-1"}
                                .modal-dialog{:role => "document"}
                                  .modal-content
                                    .modal-header
                                      %h5#deleteModalLabel.modal-title Are you sure you want to delete?
                                      %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
                                        %span{"aria-hidden" => "true"} ×
                                    .modal-body Select "Delete" below if you want to delete the document type.
                                    .modal-footer
                                      %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Cancel
                                      %a.btn.btn-danger{:href => delete_doctype_path(id: type.id)} Delete  
                                      %br/
                    %a.btn-sm.btn-primary.float-right{:href => "/add_doctype"} Add Document Type
              .col-lg-6
                .card
                  .card-header
                    %strong.card-title Job Titles
                  .card-body
                    %table.table
                      %thead
                        %tr{:align => "center"}
                          %th Name
                          %th Options
                      %tbody{:align => "center"}
                        %tr
                    %a.btn-sm.btn-primary.float-right{:href => "/add_doctype"} Add Job Title
            %br/
            .form-row  
              .col
                .card
                  .card-header
                    %strong.card-title Users
                  .card-body
                    %table.table
                      %thead
                        %tr
                          %th Name
                          %th Email Address
                          %th Job Title
                          %th Options
                      %tbody
                        - @users.each do |user|
                          %tr
                            %td= user.first_name
                            %td= user.emailadd
                            %td= user.job_title
                            %td
                              %a.btn-sm.btn-primary{:href => ""} Edit
                              %btn.btn-sm.btn-danger{"data-target" => "#deleteModal", "data-toggle" => "modal"} Delete
                              #deleteModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "deleteModalLabel", :role => "dialog", :tabindex => "-1"}
                                .modal-dialog{:role => "document"}
                                  .modal-content
                                    .modal-header
                                      %h5#deleteModalLabel.modal-title Are you sure you want to delete?
                                      %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
                                        %span{"aria-hidden" => "true"} ×
                                    .modal-body Select "Delete" below if you want to delete the user.
                                    .modal-footer
                                      %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Cancel
                                      %a.btn.btn-danger{:href => ""} Delete  
                                      %br/
                    %a.btn-sm.btn-primary.float-right{:href => ""} Add User
            %br
            %a.btn.btn-secondary.float-right{:href => "/dashboard"} Back
      / /.container-fluid
      / /.content-wrapper
      %footer.sticky-footer
        .container
          .text-center
            %small Copyright © Your Website 2018
      / Scroll to Top Button
      %a.scroll-to-top.rounded{:href => "#page-top"}
        %i.fa.fa-angle-up
      / Logout Modal
      #exampleModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
        .modal-dialog{:role => "document"}
          .modal-content
            .modal-header
              %h5#exampleModalLabel.modal-title Ready to Leave?
              %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
                %span{"aria-hidden" => "true"} ×
            .modal-body Select "Logout" below if you are ready to end your current session.
            .modal-footer
              %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Cancel
              %a.btn.btn-primary{:href => "/log_user", :id => "sign_out"} Logout
      / Delete Modal
      / Bootstrap core JavaScript
      %script{:src => "vendor/jquery/jquery.min.js"}
      %script{:src => "vendor/bootstrap/js/bootstrap.bundle.min.js"}
      / Core plugin JavaScript
      %script{:src => "vendor/jquery-easing/jquery.easing.min.js"}
      / Page level plugin JavaScript
      %script{:src => "vendor/datatables/jquery.dataTables.js"}
      %script{:src => "vendor/datatables/dataTables.bootstrap4.js"}
      / Custom scripts for all pages
      %script{:src => "js/sb-admin.min.js"}
      / Custom scripts for this page
      %script{:src => "js/sb-admin-datatables.min.js"}
