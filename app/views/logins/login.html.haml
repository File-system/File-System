!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %title Physical Document Tracking System
    / Bootstrap core CSS
    %link{:href => "vendor/bootstrap/css/bootstrap.min.css", :rel => "stylesheet"}/
    / Custom fonts for this template
    %link{:href => "vendor/font-awesome/css/font-awesome.min.css", :rel => "stylesheet", :type => "text/css"}/
    / Custom styles for this template
    %link{:href => "css/sb-admin.css", :rel => "stylesheet"}/
  %body.bg-dark
    .container
      .card.card-login.mx-auto.mt-5
        .card-header Login
        .card-body
          - if flash[:danger]
            .alert.alert-danger.alert-dismissible.fade.show{"data-auto-dismiss" => "2000", :role => "alert"}
              %a.close{"aria-label" => "close", "data-dismiss" => "alert", :href => "#"} ×
              %b.notice= flash[:danger]
          - if flash[:success]
            .alert.alert-success.alert-dismissible.fade.show{"data-auto-dismiss" => "2000", :role => "alert"}
              %a.close{"aria-label" => "close", "data-dismiss" => "alert", :href => "#"} ×
              %b.notice= flash[:success]
          %form{:action => "log", :method => "get", :name => "log_user"}
            .form-group
              %label{:for => "exampleInputEmail1"} Email address
              %input#exampleInputEmail1.form-control{:name => "emailadd", :placeholder => "example@up.edu.ph", :type => "email"}/
            .form-group
              %label{:for => "exampleInputPassword1"} Password
              %input#exampleInputPassword1.form-control{:name => "password", :placeholder => "*****", :type => "password"}/
            .form-group
              .form-check
                %label.form-check-label
                  %input.form-check-input{:type => "checkbox"}/
                  Remember Password
            %button.btn.btn-primary.btn-block{:type => "submit"} Login
          .text-center
            %a.d-block.small.mt-3{:href => "/auth/google_oauth2", :id => "sign_in"} Use UP Mail
            %a.d-block.small{:href => "/create_account"} Register an Account
            %a.d-block.small{:href => "/"} Back to Homepage
    / Bootstrap core JavaScript
    %script{:src => "vendor/jquery/jquery.min.js"}
    %script{:src => "vendor/bootstrap/js/bootstrap.bundle.min.js"}
    / Core plugin JavaScript
    %script{:src => "vendor/jquery-easing/jquery.easing.min.js"}
